{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",  // Alterado para ESNext
    "moduleResolution": "node",  // Alterado para node
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shadcn/ui/*": [
        "node_modules/@shadcn/ui/dist/*"
      ]
    },
    "types": [
      "next",
      "react",
      "react-dom"
    ]  // Adicionado para garantir que os tipos do Next.js sejam encontrados
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
